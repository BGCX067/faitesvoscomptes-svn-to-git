<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
   android:background="@drawable/fondandro">
  
  

  <TextView android:background="@drawable/fondmontant"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"></TextView>
  			
  <EditText
  			android:id="@+id/modifMontant"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content" android:inputType="number|numberSigned|numberDecimal"></EditText>


  
  <TextView android:background="@drawable/fondraison"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"></TextView>
  			
  <EditText
  			android:id="@+id/modifRaison"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"></EditText>
  			
		

</LinearLayout>
